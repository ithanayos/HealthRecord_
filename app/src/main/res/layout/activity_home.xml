<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utcc.cken.tae.som.healthrecord.HomeActivity"
    android:background="@drawable/wall">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/button9"
            android:onClick="clickRecord"
            android:layout_weight="1"
            android:background="@drawable/p1" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/button10"
            android:onClick="clickDisease"
            android:layout_weight="1"
            android:background="@drawable/p2"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutme"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:background="#89a4b0"
        android:textColor="#030303"
        android:textSize="@dimen/h2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:padding="10dp">

        <TextView
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="@string/title_record"
            android:id="@+id/textView12"
            android:textSize="@dimen/h3"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_disease"
            android:id="@+id/textView13"
            android:textSize="@dimen/h3"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

</RelativeLayout>